-@posts.each do |post|
  .post-info
    %p=(post.created_at).strftime("%B %d, %Y")
    %p.tagged Теги:
    %ul.tags
      -post.tag_list.each do |tag|
        %li=link_to tag, {action: "tagged", :tag => tag}

  .post-text
    .post-content
      %h2=link_to post.title, post
      %noindex
        %p=raw RedCloth.new(post.preview).to_html

=will_paginate @posts
